# Flask application secret key (for session management)
# Generate a random key, e.g., using: python -c "import secrets; print(secrets.token_hex(16))"
FLASK_SECRET_KEY="your_random_secret_key_here"

# Google Cloud Storage bucket name
GCS_BUCKET_NAME=your-gcs-bucket-name

# Google OAuth client ID (for authentication)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Vertex AI configuration
VERTEX_AI_LOCATION=us-central1
VERTEX_AI_PROJECT_ID=your-gcp-project-id

# Optionally, set the port for the Flask application
# PORT=3000 

# Vector Search configuration (optional)
VECTOR_INDEX_ENDPOINT=projects/your-project-id/locations/us-central1/indexEndpoints/your-endpoint-id
VECTOR_INDEX_ID=your-index-id 