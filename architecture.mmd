        Storage[("💾 Cloud Storage")]
        Vector[("🔍 Vector Search")]
        GDrive[("📁 Google Drive")]
        
        class Vertex,Storage,GDrive cloud
        class Firestore database
        class Vector cloud
    end

    %% Security Layer
    subgraph Security["Security Layer"]
        direction LR
        OAuth[("🔒 OAuth 2.0")]
